<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="#FF9800"
             android:gravity="center"
             tools:context=".GameScreen">


    <FrameLayout
            android:layout_width="match_parent"
            android:id="@+id/gameArea"
            android:layout_height="match_parent">
        <io.github.controlwear.virtual.joystick.android.JoystickView
                android:id="@+id/joystick"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                app:JV_buttonColor="#FF6E40"
                app:JV_buttonSizeRatio="15%"
                app:JV_borderColor="#00796B"
                app:JV_backgroundColor="#009688"
                app:JV_borderWidth="4dp"
                app:JV_fixedCenter="false"
                android:layout_gravity="bottom|start"
                android:rotation="90"/>

        <ImageView
                android:src="@drawable/ic_launcher_foreground"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/player1" android:layout_gravity="center|left"/>
        <ImageView
                android:src="@drawable/ic_launcher_foreground"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/player2" android:layout_gravity="center|right"/>
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:id="@+id/shoot"
                android:layout_gravity="bottom|right">
            <ImageView
                    android:src="@drawable/ic_thin_target"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </LinearLayout>

    </FrameLayout>
</FrameLayout>