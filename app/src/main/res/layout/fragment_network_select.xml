<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              tools:context=".fragment.NetworkSelectFragment" android:orientation="vertical" android:gravity="center">


    <TextView
            android:text="@string/app_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/textView4" android:gravity="center"/>
    <TextView
            android:text="@string/enter_enemy_ip_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/textView5" android:gravity="center"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/yourIpAddressText" android:gravity="center"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/ipAddressText" android:gravity="center"/>
    <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/button"/>
    <ImageView
            android:id="@+id/iconHelp"
            android:src="@drawable/ic_round_info"
            android:layout_width="48dp"
            android:layout_height="48dp"
    />
</LinearLayout>