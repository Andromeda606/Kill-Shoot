<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:background="@drawable/background_character"
             android:layout_width="match_parent" android:layout_height="match_parent"
             tools:context=".fragment.characterselect.CharacterSelectFragment">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:gravity="center" android:layout_gravity="center">
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/ipAddressText" android:gravity="center"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/enemyStatus" android:gravity="center"/>
        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/characterList"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_gravity="center"
                android:foregroundGravity="center"/>

    </LinearLayout>
</FrameLayout>