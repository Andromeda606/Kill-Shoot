<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:background="@drawable/background_character"
              android:layout_height="match_parent"
              tools:context=".fragment.WelcomeScreenFragment" android:orientation="vertical" android:gravity="center">
    <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/app_name"
              android:gravity="center" android:textColor="#FFFFFF" android:textSize="60sp"
              android:fontFamily="@font/futupo"/>
    <Button
            android:layout_width="wrap_content"
            android:background="@drawable/stroke"
            android:id="@+id/buttonStart"
            android:layout_margin="5dp"
            android:layout_height="wrap_content" android:textColor="@color/white"
            android:text="@string/start_game"/>
    <Button
            android:layout_width="wrap_content"
            android:background="@drawable/stroke"
            android:layout_margin="5dp"
            android:layout_height="wrap_content"
            android:id="@+id/buttonContributed" android:textColor="@color/white" android:text="@string/contributors"/>
    <Button
            android:layout_margin="5dp"
            android:id="@+id/buttonClose"
            android:layout_width="wrap_content"
            android:background="@drawable/stroke"
            android:layout_height="wrap_content" android:textColor="@color/white" android:text="@string/exit_game"/>
</LinearLayout>